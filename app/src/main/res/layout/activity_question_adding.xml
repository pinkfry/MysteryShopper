<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".Activity.QuestionAddingActivity">
    <EditText android:layout_width="match_parent"
              android:layout_margin="10dp"
              android:hint="Enter the Question"
              android:id="@+id/etQuestion"
              android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
        <EditText android:layout_width="0dp"
                  android:layout_weight="3"
                  android:hint="Enter the Options"
                  android:id="@+id/etOptions"
                  android:layout_height="wrap_content"/>
        <EditText android:layout_width="0dp"
                  android:layout_weight="1"
                  android:hint="Value"
                  android:inputType="number"
                  android:id="@+id/etValue"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button android:layout_width="wrap_content"
            android:text="Add Options"
            android:layout_gravity="end"
            android:id="@+id/btnAddOptions"
            android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:id="@+id/rvOptions"
            android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
    <Button android:layout_width="wrap_content"
            android:text="Add Questions"
            android:layout_gravity="center"
            android:id="@+id/btnAddQuestions"
            android:layout_height="wrap_content"/>
</LinearLayout>